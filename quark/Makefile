OBJS = type.cmo ast.cmo sast.cmo parser.cmo scanner.cmo \
	  generator.cmo semantic_debug.cmo compile.cmo

TESTS = arith1 arith2 arith3 arith4 \
	fib \
	for1 for2 \
	func1 func2 func3 func4 func5 \
	gcd \
	global1 \
	hello \
	if1 if2	if3 if4 if5 \
	ops1 \
	var1 var2 var3 var4 \
	stmts1 \
	while1

TARFILES = Makefile testall.sh scanner.mll parser.mly \
	type.ml ast.ml sast.ml generator.ml semantic_debug.ml compile.ml \
	$(TESTS:%=tests/test-%.mc) \
	$(TESTS:%=tests/test-%.out)

quarkc : $(OBJS)
	ocamlc -o quarkc $(OBJS)

.PHONY : test
test : quarkc testall.sh
	./testall.sh

scanner.ml : scanner.mll
	ocamllex scanner.mll

parser.ml parser.mli : parser.mly
	ocamlyacc parser.mly

DISABLE_WARN = -4-39-11-27

%.cmo : %.ml
	ocamlc -w +a$(DISABLE_WARN) -c $<

%.cmi : %.mli
	ocamlc -w +a$(DISABLE_WARN) -c $<

.PHONY : clean
clean :
	rm -f quarkc parser.ml parser.mli scanner.ml testall.log \
	*.cmo *.cmi *.out *.diff

# Generated by ocamldep *.ml *.mli
ast.cmo : type.cmo
ast.cmx : type.cmx
compile.cmo : parser.cmi
compile.cmx : parser.cmx
generator.cmo : type.cmo ast.cmo
generator.cmx : type.cmx ast.cmx
parser.cmo : type.cmo ast.cmo parser.cmi
parser.cmx : type.cmx ast.cmx parser.cmi
sast.cmo : ast.cmo
sast.cmx : ast.cmx
semantic.cmo : type.cmo sast.cmo ast.cmo
semantic.cmx : type.cmx sast.cmx ast.cmx
semantic_debug.cmo : type.cmo sast.cmo ast.cmo
semantic_debug.cmx : type.cmx sast.cmx ast.cmx
type.cmo :
type.cmx :
parser.cmi : ast.cmo
